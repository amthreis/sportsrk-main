{
  "name": "better-sportsrk",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "seed": "npx prisma db push --force-reset && NODE_ENV=development ts-node ./src/seeders/seeder-dev.ts",
    "make-games": "NODE_ENV=development ts-node ./src/test/make-games.ts",
    "commit": "npx prisma generate && npx prisma db push --force-reset ",
    "test": "jest",
    "test:e2e": "jest --config jest-e2e.config.ts",
    "dev": "NODE_ENV=development ts-node-dev --poll src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "migrate-start": "npm run prod:migrate-n-seed && NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "dev:migrate-n-seed": "npx prisma generate && npx prisma db push --force-reset && ts-node ./src/seeders/seeder-dev.ts",
    "prod:migrate-n-seed": "npx prisma generate && npx prisma db push --force-reset && node ./dist/seeders/seeder-dev.js",
    "docker:build-db-postgres": "npm run commit  && NODE_ENV=development ts-node ./src/seeders/seeder-dev.ts",
    "docker:test": "docker compose -f docker/compose.yml -f docker/compose.test.yml --env-file=.env --env-file=.env.test up --build",
    "docker:dev-seed": "docker compose -f docker/compose.yml -f docker/compose.dev.yml -f docker/compose.dev.seed.yml --env-file=.env up --build",
    "docker:dev": "docker compose -f docker/compose.yml -f docker/compose.dev.yml --env-file=.env  up  --build",
    "docker:prod": "docker compose -f docker/compose.yml -f docker/compose.prod.yml  --env-file=.env  up --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.6",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.10.2",
    "cors": "^2.8.5",
    "date-fns": "^3.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "prisma": "^5.10.2",
    "redis": "^4.6.13",
    "zod": "^3.22.4"
  }
}
